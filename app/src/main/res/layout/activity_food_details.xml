<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FoodDetailsActivity">

    <ProgressBar
        android:id="@+id/this_food_prog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerInParent="true"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/this_food_nestscroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/this_meal_thumbimg"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/main_color"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/this_meal_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackground"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/white"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/upper_curve_lay"
                android:layout_below="@+id/this_meal_thumbimg"
                android:layout_marginTop="-20dp"
                android:elevation="15dp"
                android:padding="20dp">

                <TextView
                    android:id="@+id/this_meal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amarante"
                    android:text="Food Name"
                    android:textColor="@color/main_color"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/this_meal_instructions_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amarante"
                        android:text="Instructions"
                        android:textColor="@color/main_color"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/this_meal_instructions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:lineSpacingExtra="2dp"
                        android:fontFamily="@font/amarante"
                        android:textColor="@color/light_dark" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/light_dark" />


                <LinearLayout
                    android:id="@+id/this_meal_category_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/amarante"
                        android:text="Food Category: "
                        android:textColor="@color/main_color"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/this_meal_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/amarante" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/this_meal_area_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/amarante"
                        android:text="Country Area : "
                        android:textColor="@color/main_color"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/this_meal_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/amarante" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/this_meal_tags_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/amarante"
                        android:text="Speciality : "
                        android:textColor="@color/main_color"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/this_meal_tags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/amarante" />

                </LinearLayout>

                <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:background="@color/light_dark" />

                <LinearLayout
                    android:id="@+id/this_food_video_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amarante"
                        android:text="Reference Video for the Food Recipe "
                        android:textColor="@color/main_color"
                        android:textSize="17sp" />

                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/youtube_player_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/stroke_drawable"
                        app:autoPlay="false"
                        app:showFullScreenButton="false" />

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addfav_this_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:backgroundTint="@color/white"
        app:srcCompat="@drawable/ic_favorite"
        app:tint="#B1B1B1"
        tools:ignore="ContentDescription" />


</RelativeLayout>