<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mpage_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/mpage_conatiner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/mpage_image_lay"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="5dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="7dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/mpage_food_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/mpage_item_fav"
            android:layout_toEndOf="@+id/mpage_image_lay">

            <TextView
                android:id="@+id/mpage_food_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="serif"
                android:text="Food Product Name"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/mpage_food_cat_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="serif"
                android:text="Category"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/mpage_food_area_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="serif"
                android:text="Area / Region"
                android:textSize="13sp"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/mpage_item_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/second_black"
            android:layout_marginHorizontal="20dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            app:tint="#D8D8D8"
            android:padding="10dp"
            android:src="@drawable/ic_favorite"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription,HardcodedText" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@+id/mpage_conatiner"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="#B1B1B1" />

</RelativeLayout>